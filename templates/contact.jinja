{% extends "base.jinja" %}

{% block subtitle %}
<h3 class="text-muted">Contact Us</h3>
{% endblock %}

{% block content %}
<div class="row">
  <div class="col-md-7">
    <div class="card">
      <div class="card-header">Please fill out our contact form. You can also email us at <a href="mailto:dewey@dchlaw.com">dewey@dchlaw.com</a></div>
      <div class="card-body">
        <form action="/contact" method="POST">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" name="name" id="name" aria-describedby="nameHelp" placeholder="Full Name">
            <small id="nameHelp" class="form-text text-muted">To whom should we send our reply?</small>
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="Email">
          </div>
          <div class="form-group">
            <label for="name">Message:</label>
            <textarea rows="5" class="form-control" name="message" id="message" placeholder="Message"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Send</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-md-5">
  </div>
</div>
{% endblock %}